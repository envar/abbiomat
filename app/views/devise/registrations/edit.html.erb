<h1>Edit Profile</h1>
<hr>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, multipart: true, class: "form-horizontal" }) do |f| %>
  <div class="row">
    <!-- left column -->
    <div class="col-md-3">
      <div class="avatar">
        <% if current_user.avatar? %>
          <%= image_tag current_user.avatar.url(:thumb) %>
        <% else %>
          <img src="//placehold.it/100" class="avatar img-circle" alt="avatar">
        <% end %>
        <h6>Upload a different photo...</h6>
        <%= f.file_field :avatar %>
      </div>
    </div>

    <!-- edit form column -->
    <div class="col-md-9 personal-info">
      <%= devise_error_messages! %>
      <h3>Personal info</h3>

      <div class="form-group">
        <%= f.label :first_name, class: "col-lg-3 control-label" %>
        <div class="col-lg-8">
          <%= f.text_field :first_name, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :last_name, class: "col-lg-3 control-label" %>
        <div class="col-lg-8">
          <%= f.text_field :last_name, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :email, class: "col-lg-3 control-label" %>
        <div class="col-lg-8">
          <%= f.email_field :email, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :current_password, class: "col-lg-3 control-label" %>
        <div class="col-lg-8">
          <%= f.password_field :current_password, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password, class: "col-lg-3 control-label" %>
        <div class="col-lg-8">
          <%= f.password_field :password, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, class: "col-lg-3 control-label" %>
        <div class="col-lg-8">
          <%= f.password_field :password_confirmation, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <label class="col-md-3 control-label"></label>
        <div class="col-md-8">
          <%= f.submit "Save Changes", class: "btn btn-primary" %>
          <input type="reset" class="btn btn-default" value="Cancel">
        </div>
      </div>
    </div>
  </div>
<% end %>
<hr>
