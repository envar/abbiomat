<script src='https://www.google.com/recaptcha/api.js'></script>

<div class="container content">
  <h1>Contact Us</h1>
  <p id="notice"><%= notice %></p>

  <%= form_for @contact, :html => { multipart: true} do |f| %>
    <% if @contact.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

        <ul>
          <% @contact.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :name %><br>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :email %><br>
      <%= f.email_field :email, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :message %><br>
      <%= f.text_area :message, rows: "20", class: 'form-control' %>
    </div>

    <!-- Recaptcha widget -->
    <div class="form-group">
      <div class="g-recaptcha" data-sitekey="6LdLmAUTAAAAAFCqY9E0poVQRZA5ZIICUTAziJtZ"></div>
    </div>

    <%= f.submit "Send Message", class: "btn btn-primary btn-sm" %>

  <% end %>
</div>
